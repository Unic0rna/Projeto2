@model Projeto2.Models.Produto
@{
    ViewData["Title"] = "Cadastro";
}


<h2>Register</h2>

<form asp-action="Cadastro" method="post">

    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>

    <div>
        <label>Descrição:</label>
        <input asp-for="Descricao" required />
    </div>
    <div>
        <label>Preco por unidade:</label>
        <input asp-for="Preco" required />
    </div>

    <button type="submit">Novo Cadastro</button> 
</form>>