@model Projeto2.Models.Usuario

@{
    ViewData["Title"] = "Cadastro";
}

<link href="~/css/estilo.css" rel="stylesheet" />

<h2>Cadastrar Usuário</h2>

<form asp-action="Cadastro" method="post">

    <div>
        <label>Nome:</label>
        <br />
        <input asp-for="Nome" maxlength="50" required />
    </div>

    <div>
        <label>Email:</label>
        <br />
        <input asp-for="Email" type="email" maxlength="50" required />
    </div>
    <div>
        <label>Senha:</label>
        <br />
        <input asp-for="Senha" type="password" maxlength="50" required />
    </div>

    <button type="submit">Novo Cadastro</button> 

</form>